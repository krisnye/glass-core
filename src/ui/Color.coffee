#   converts a color to "rgba(255,255,255,1)" style strings.
Color.toRgbaString = (color) ->
    return null if not color?
    convert = (index) -> Math.round color[index] * 255
    return "rgba(#{convert 0},#{convert 1},#{convert 2},#{color[3]})"

